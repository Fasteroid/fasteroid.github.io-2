{
	"private": true,
	"scripts": {

		"build": "preact build --prerenderUrls ./preact.prerender.js",
		"serve": "sirv build --cors --single --prerenderUrls ./preact.prerender.js",
		"predeploy": "npm run build",
		"deploy": "gh-pages -d build",

		"dev": "preact watch",
		"lint": "eslint src",
		"test": "jest"

	},
	"eslintConfig": {
		"parser": "@typescript-eslint/parser",
		"extends": [
			"preact",
			"plugin:@typescript-eslint/recommended"
		],
		"ignorePatterns": [
			"build/"
		]
	},
	"dependencies": {
		"preact": "^10.10.0",
		"preact-render-to-string": "^5.2.1",
		"preact-router": "^3.2.1"
	},
	"devDependencies": {
		"@types/enzyme": "^3.10.12",
		"@types/jest": "^27.4.1", 
		"@typescript-eslint/eslint-plugin": "^5.30.6",
		"@typescript-eslint/parser": "^5.30.6",
		"enzyme": "^3.11.0",
		"enzyme-adapter-preact-pure": "^4.0.1",
		"eslint": "^8.20.0",
		"eslint-config-preact": "^1.3.0",
		"gh-pages": "^6.0.0",
		"jest": "^27.5.1",
		"jest-preset-preact": "^4.0.5",
		"preact-cli": "^4.0.0-next.1",
		"sirv-cli": "^2.0.2",
		"typescript": "^4.5.2"
	}
}
